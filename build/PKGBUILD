# Maintainer: stron <contact@stron.me>
pkgname=hybar
pkgver=0.0.14
pkgrel=1
pkgdesc="Hybar: A task-bar for Hyprland written in Rust"
arch=("x86_64")
url="https://github.com/elstron/hybar"
license=("Apache-2.0")

depends=()
makedepends=("rust" "cargo")

source=()
sha256sums=()

build() {
  cd "$startdir/.."
  cargo build --release
}

package() {
  cd "$startdir/.."
  install -Dm755 target/release/hybar \
    "$pkgdir/usr/bin/hybar"
}
